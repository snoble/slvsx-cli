{
  "schema": "slvs-json/1",
  "units": "mm", 
  "parameters": {
    "link1_length": 50.0,
    "link2_length": 80.0
  },
  "entities": [
    {
      "type": "point",
      "id": "ground_a", 
      "at": [0, 0, 0]
    },
    {
      "type": "point",
      "id": "ground_b",
      "at": ["$link1_length", 0, 0]
    },
    {
      "type": "point", 
      "id": "joint_p",
      "at": [10, 10, 0]
    },
    {
      "type": "line",
      "id": "input_link",
      "p1": "ground_a", 
      "p2": "joint_p"
    },
    {
      "type": "line",
      "id": "ground_link",
      "p1": "ground_a",
      "p2": "ground_b"
    }
  ],
  "constraints": [
    {
      "type": "fixed",
      "entity": "ground_a"
    },
    {
      "type": "fixed", 
      "entity": "ground_b"
    },
    {
      "type": "distance",
      "between": ["ground_a", "joint_p"],
      "value": "$link2_length"
    }
  ]
}