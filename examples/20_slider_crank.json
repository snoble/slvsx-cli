{
  "schema": "slvs-json/1",
  "units": "mm",
  "description": "Slider-crank mechanism - piston slides along axis",
  "parameters": {
    "crank_length": 50.0,
    "connecting_rod_length": 120.0
  },
  "entities": [
    {
      "type": "point",
      "id": "crank_pivot",
      "at": [0, 0, 0]
    },
    {
      "type": "point",
      "id": "axis_end",
      "at": [200, 0, 0]
    },
    {
      "type": "point",
      "id": "crank_end",
      "at": [43.3, 25, 0]
    },
    {
      "type": "point",
      "id": "piston",
      "at": [163, 0, 0]
    },
    {
      "type": "line",
      "id": "piston_axis",
      "p1": "crank_pivot",
      "p2": "axis_end"
    },
    {
      "type": "line",
      "id": "crank",
      "p1": "crank_pivot",
      "p2": "crank_end"
    },
    {
      "type": "line",
      "id": "connecting_rod",
      "p1": "crank_end",
      "p2": "piston"
    }
  ],
  "constraints": [
    {
      "type": "fixed",
      "entity": "crank_pivot"
    },
    {
      "type": "fixed",
      "entity": "axis_end"
    },
    {
      "type": "point_on_line",
      "point": "piston",
      "line": "piston_axis"
    },
    {
      "type": "distance",
      "between": ["crank_pivot", "crank_end"],
      "value": "$crank_length"
    },
    {
      "type": "distance",
      "between": ["crank_end", "piston"],
      "value": "$connecting_rod_length"
    }
  ]
}

