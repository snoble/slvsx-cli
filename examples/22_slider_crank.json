{
  "schema": "slvs-json/1",
  "units": "mm",
  "parameters": {
    "crank_length": 30.0,
    "connecting_rod_length": 80.0,
    "crank_angle": 45.0
  },
  "entities": [
    {
      "type": "point",
      "id": "crank_pivot",
      "at": [0, 0, 0]
    },
    {
      "type": "point",
      "id": "crank_end",
      "at": [21.21, 21.21, 0]
    },
    {
      "type": "point",
      "id": "piston",
      "at": [80, 0, 0]
    },
    {
      "type": "line",
      "id": "crank",
      "p1": "crank_pivot",
      "p2": "crank_end"
    },
    {
      "type": "line",
      "id": "connecting_rod",
      "p1": "crank_end",
      "p2": "piston"
    }
  ],
  "constraints": [
    {
      "type": "fixed",
      "entity": "crank_pivot"
    },
    {
      "type": "distance",
      "between": ["crank_pivot", "crank_end"],
      "value": "$crank_length"
    },
    {
      "type": "distance",
      "between": ["crank_end", "piston"],
      "value": "$connecting_rod_length"
    }
  ]
}
