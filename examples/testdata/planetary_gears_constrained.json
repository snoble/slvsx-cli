{
  "schema": "slvs-json/1",
  "units": "mm",
  "parameters": {
    "sun_radius": 24.0,
    "planet_radius": 12.0,
    "ring_radius": 60.0,
    "sun_planet_distance": 36.0,
    "planet_planet_distance": 24.0
  },
  "entities": [
    {
      "type": "circle",
      "id": "sun",
      "center": [0, 0, 0],
      "diameter": "$sun_radius * 2"
    },
    {
      "type": "circle",
      "id": "planet1",
      "center": [36, 0, 0],
      "diameter": "$planet_radius * 2"
    },
    {
      "type": "circle", 
      "id": "planet2",
      "center": [18, 31.2, 0],
      "diameter": "$planet_radius * 2"
    },
    {
      "type": "circle",
      "id": "planet3",
      "center": [-18, 31.2, 0],
      "diameter": "$planet_radius * 2"
    },
    {
      "type": "circle",
      "id": "planet4",
      "center": [-36, 0, 0],
      "diameter": "$planet_radius * 2"
    },
    {
      "type": "circle",
      "id": "planet5",
      "center": [-18, -31.2, 0],
      "diameter": "$planet_radius * 2"
    },
    {
      "type": "circle",
      "id": "planet6",
      "center": [18, -31.2, 0],
      "diameter": "$planet_radius * 2"
    },
    {
      "type": "circle",
      "id": "ring",
      "center": [0, 0, 0],
      "diameter": "$ring_radius * 2"
    }
  ],
  "constraints": [
    {
      "type": "distance",
      "between": ["sun", "planet1"],
      "value": "$sun_planet_distance"
    },
    {
      "type": "distance",
      "between": ["sun", "planet2"],
      "value": "$sun_planet_distance"
    },
    {
      "type": "distance",
      "between": ["sun", "planet3"],
      "value": "$sun_planet_distance"
    },
    {
      "type": "distance",
      "between": ["sun", "planet4"],
      "value": "$sun_planet_distance"
    },
    {
      "type": "distance",
      "between": ["sun", "planet5"],
      "value": "$sun_planet_distance"
    },
    {
      "type": "distance",
      "between": ["sun", "planet6"],
      "value": "$sun_planet_distance"
    }
  ]
}