{
  "schema": "slvs-json/1",
  "units": "mm",
  "parameters": {
    "module": 2.0,
    "pressure_angle": 20.0,
    "sun_teeth": 24,
    "planet_teeth": 12,
    "ring_teeth": 48,
    "stub_factor": 0.5
  },
  "metadata": {
    "description": "3-planet system with stub teeth to prevent overlap",
    "notes": [
      "Standard formula S + 2P = R gives correct pitch circles",
      "But standard tooth heights cause 4mm overlap",
      "Using stub teeth with 50% height reduction",
      "Addendum/dedendum = 0.5 * module = 1mm instead of 2mm"
    ]
  },
  "entities": [
    {
      "type": "gear",
      "id": "sun",
      "center": [0, 0, 0],
      "teeth": "$sun_teeth",
      "module": "$module",
      "pressure_angle": "$pressure_angle",
      "phase": 0.0,
      "internal": false,
      "addendum_factor": "$stub_factor",
      "dedendum_factor": "$stub_factor"
    },
    {
      "type": "gear",
      "id": "planet1",
      "center": [36, 0, 0],
      "teeth": "$planet_teeth",
      "module": "$module",
      "pressure_angle": "$pressure_angle",
      "phase": 0.0,
      "internal": false,
      "addendum_factor": "$stub_factor",
      "dedendum_factor": "$stub_factor"
    },
    {
      "type": "gear",
      "id": "planet2",
      "center": [-18, 31.18, 0],
      "teeth": "$planet_teeth",
      "module": "$module",
      "pressure_angle": "$pressure_angle",
      "phase": 0.0,
      "internal": false,
      "addendum_factor": "$stub_factor",
      "dedendum_factor": "$stub_factor"
    },
    {
      "type": "gear",
      "id": "planet3",
      "center": [-18, -31.18, 0],
      "teeth": "$planet_teeth",
      "module": "$module",
      "pressure_angle": "$pressure_angle",
      "phase": 0.0,
      "internal": false,
      "addendum_factor": "$stub_factor",
      "dedendum_factor": "$stub_factor"
    },
    {
      "type": "gear",
      "id": "ring",
      "center": [0, 0, 0],
      "teeth": "$ring_teeth",
      "module": "$module",
      "pressure_angle": "$pressure_angle",
      "phase": 0.0,
      "internal": true,
      "addendum_factor": "$stub_factor",
      "dedendum_factor": "$stub_factor"
    }
  ],
  "constraints": [
    {
      "type": "mesh",
      "gear1": "sun",
      "gear2": "planet1"
    },
    {
      "type": "mesh",
      "gear1": "sun",
      "gear2": "planet2"
    },
    {
      "type": "mesh",
      "gear1": "sun",
      "gear2": "planet3"
    },
    {
      "type": "mesh",
      "gear1": "ring",
      "gear2": "planet1"
    },
    {
      "type": "mesh",
      "gear1": "ring",
      "gear2": "planet2"
    },
    {
      "type": "mesh",
      "gear1": "ring",
      "gear2": "planet3"
    }
  ]
}