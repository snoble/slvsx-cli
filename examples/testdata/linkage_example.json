{
  "schema": "slvs-json/1",
  "units": "mm",
  "parameters": {
    "link_length": 100.0,
    "joint_diameter": 10.0
  },
  "entities": [
    {
      "type": "circle",
      "id": "joint_a",
      "center": [0, 0, 0],
      "diameter": "$joint_diameter"
    },
    {
      "type": "circle",
      "id": "joint_b",
      "center": [100, 0, 0],
      "diameter": "$joint_diameter"
    },
    {
      "type": "circle",
      "id": "joint_c",
      "center": [50, 86.6, 0],
      "diameter": "$joint_diameter"
    }
  ],
  "constraints": [
    {
      "type": "distance",
      "between": ["joint_a", "joint_b"],
      "value": "$link_length"
    },
    {
      "type": "distance",
      "between": ["joint_b", "joint_c"],
      "value": "$link_length"
    },
    {
      "type": "distance",
      "between": ["joint_c", "joint_a"],
      "value": "$link_length"
    }
  ]
}